<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="FINE">
  <Properties>
    <property name="log-path">../../logs/life/rest/</property>
    <!-- <property name="log-path">file:///./data/local/life/logs/</property> -->
    <property name="log-name">life-rest</property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %5p (%F:%L) - %m%n" />
    </Console>
    <RollingFile name="RollingFile" fileName="${log-path}/${log-name}.log"
      filePattern="${log-path}/$${date:yyyy-MM}/${log-name}-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %5p (%F:%L) - %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="10 MB" />
      </Policies>
      <DefaultRolloverStrategy max="5" />
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="Console" />
      <AppenderRef ref="RollingFile" />
    </Root>
  </Loggers>
</Configuration>